  visible?: boolean;
  id?: string;
}

const { id, class: className, visible, size = "small" } = Astro.props;
---

<input
  role="searchbox"
  maxlength="80"
  autocorrect="off"
  autocapitalize="none"
  spellcheck="false"
  placeholder="Buscar en Tu biblioteca"
  aria-hidden="true"
  value=""
