    "outline-none p-1.5 transition-transform",
    {
      "rounded-[3px] pl-8 text-[13.333px] text-secondaryLight placeholder-secondaryLight bg-tagHighlighting ":
        size === "small",

      open: visible,
    },
    className,
  ]}
  id={id}
/>

