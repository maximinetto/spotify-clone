---
type SizeIcon = "normal" | "small";
interface Props {
  class?: string;
  size?: SizeIcon;
}

const { size = "normal", class: className } = Astro.props;

let width = "24px";
let height = "24px";
if (size === "small") {
  width = "16px";
  height = "16px";
}
---

{
  size === "normal" && (
    <svg
      role="img"
      aria-hidden="true"
      width={width ?? "24px"}
      height={height ?? "24px"}
      class:list={["search-active-icon", className]}
      viewBox="0 0 24 24"
      fill="currentcolor"
    >
      <path d="M10.533 1.279c-5.18 0-9.407 4.14-9.407 9.279s4.226 9.279 9.407 9.279c2.234 0 4.29-.77 5.907-2.058l4.353 4.353a1 1 0 1 0 1.414-1.414l-4.344-4.344a9.157 9.157 0 0 0 2.077-5.816c0-5.14-4.226-9.28-9.407-9.28zm-7.407 9.279c0-4.006 3.302-7.28 7.407-7.28s7.407 3.274 7.407 7.28-3.302 7.279-7.407 7.279-7.407-3.273-7.407-7.28z" />
    </svg>
  )
}
{
  size === "small" && (
    <svg
      role="img"
      aria-hidden="true"
      class:list={["search-active-icon", className]}
      viewBox="0 0 16 16"
      width={width ?? "24px"}
      height={height ?? "24px"}
      fill="currentcolor"
    >
      <path d="M7 1.75a5.25 5.25 0 1 0 0 10.5 5.25 5.25 0 0 0 0-10.5zM.25 7a6.75 6.75 0 1 1 12.096 4.12l3.184 3.185a.75.75 0 1 1-1.06 1.06L11.304 12.2A6.75 6.75 0 0 1 .25 7z" />
    </svg>
  )
}
